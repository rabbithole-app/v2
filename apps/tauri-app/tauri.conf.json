{
  "$schema": "../../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Rabbithole App",
  "version": "0.1.0",
  "identifier": "com.rabbithole.app",
  "build": {
    "frontendDist": "../../dist/apps/rabbithole/browser",
    "devUrl": "http://localhost:4200"
  },
  "app": {
    "windows": [
      {
        "title": "Tauri",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "capabilities": ["main"],
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "mobile": [{ "host": "mphmm-iqaaa-aaaap-anwyq-cai.icp0.io" }],
      "desktop": {
        "schemes": ["rabbithole"]
      }
    }
  }
}
