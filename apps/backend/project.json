{
  "name": "backend",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/backend",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "docker compose up",
        "parallel": false
      },
      "dependsOn": [
        {
          "target": "build",
          "projects": ["rabbithole"]
        }
      ]
    },
    "compose": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "docker compose",
        "env": {
          "COMPOSE_PROJECT_NAME": "rabbithole"
        },
        "parallel": false
      }
    },
    "generate-declarations": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "commands": [
          "docker compose exec backend dfx generate",
          "cp -r src/declarations/rabbithole-backend ../../libs/declarations/src/backend",
          "cp -r src/declarations/encrypted-storage ../../libs/declarations/src/encrypted-storage"
        ],
        "env": {
          "COMPOSE_PROJECT_NAME": "rabbithole"
        },
        "parallel": false
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/backend",
        "command": "docker compose exec backend dfx deploy",
        "parallel": false
      },
      "dependsOn": [
        {
          "target": "build",
          "projects": ["rabbithole"]
        }
      ]
    },
    "install-ca": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bash scripts/install-ca.sh",
        "cwd": "apps/backend"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "continuous": true,
      "options": {
        "cwd": "apps/backend",
        "command": "docker compose up",
        "env": {
          "COMPOSE_PROJECT_NAME": "rabbithole"
        },
        "parallel": false
      }
    }
  }
}
