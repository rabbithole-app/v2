{
  "languages": {
    "TypeScript": {
      "language_servers": [
        "vtsls",
        "tailwindcss-language-server",
        "eslint",
        "!typescript-language-server",
      ],
      "formatter": [
        { "code_action": "source.fixAll.eslint" },
        {
          "external": {
            "command": "prettier",
            "arguments": ["--stdin-filepath", "{buffer_path}"],
          },
        },
      ],
    },
    "HTML": {
      "language_servers": [
        "tailwindcss-language-server",
        "angular",
        "eslint",
        "...",
      ],
    },
    "CSS": {
      "language_servers": [
        "tailwindcss-intellisense-css",
        "!vscode-css-language-server",
        "...",
      ],
    },
    "Motoko": {
      "language_servers": ["motoko-language-server"],
    },
  },
  "lsp": {
    "eslint": {
      "settings": {
        "experimental": {
          "useFlatConfig": true,
        },
      },
    },
    "motoko-language-server": {
      "initialization_options": {
        "formatter": "none",
        "maxMemory": 8192,
      },
      "binary": {
        "env": {
          "NODE_OPTIONS": "--max-old-space-size=8192",
        },
      },
    },
    "vtsls": {
      "initialization_options": {
        "typescript": {
          "tsdk": "./node_modules/typescript/lib",
          "enablePromptUseWorkspaceTsdk": true,
        },
      },
    },
    "angular": {
      "binary": {
        "path": "node",
        "arguments": [
          "./node_modules/@angular/language-server/index.js",
          "--stdio",
          "--tsProbeLocations",
          "./node_modules",
          "--ngProbeLocations",
          "./node_modules",
        ],
      },
      "settings": {
        "angular": {
          "log": "verbose",
        },
      },
    },
    "tailwindcss-language-server": {
      "settings": {
        "classFunctions": ["cva", "hlm"],
        "classAttributes": ["class", "ngClass", "[class]", "[ngClass]"],
      },
    },
  },
}
